source 'https://rubygems.org'

# Latest Ruby
ruby '2.3.0'

# Simple HTTP
gem 'sinatra'

# Web server
gem 'puma'

# Time
gem 'chronic'

# Key-value store
gem 'redis'

# Use the right host
gem 'rack-canonical-host'

# Assets
gem 'sprockets'
gem 'sass'
gem 'sprockets-sass'
gem 'haml'

# Markdown
gem 'redcarpet'

# Development dependencies
group :development do
  # Automatically reload
  gem 'shotgun'
end
